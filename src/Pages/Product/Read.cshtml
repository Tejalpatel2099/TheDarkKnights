@page "{number}"
@model RamenRatings.WebSite.Pages.ReadModel

<div class="container mt-4">
    <h2 class="animated-heading text-center mb-4">Ramen Information</h2>

    <div class="card p-4 shadow-lg bg-light">
        <div class="row">
            <!-- Image Section -->
            <div class="col-md-5 text-center">
                <img src="@Model.Product.img?ts=@DateTime.Now.Ticks" alt="@Model.Product.Variety" class="img-fluid rounded" />
            </div>

            <!-- Detail Section -->
            <div class="col-md-7">
                <h3 class="variety-title">@Model.Product.Variety</h3>
                <p><strong>Brand:</strong> @Model.Product.Brand</p>
                <p><strong>Style:</strong> @Model.Product.Style</p>
                <p><strong>Country:</strong> @Model.Product.Country</p>
                <!-- Outputs ratings as average of ratings array-->
                <p><strong>Average Rating:</strong> 
                    @{
                        var ratings = Model.Product.Ratings;
                        if (ratings != null && ratings.Length > 0)
                        {
                            double avg = ratings.Average();
                            @($"{avg:F1} / 5")
                        }
                        else
                        {
                            @("No ratings yet")
                        }
                    }
                </p>
            </div>
        </div>
    </div>
</div>
<text>
    <style>
        .animated-heading {
            font-size: 2.5rem;
            font-weight: bold;
            background: linear-gradient(270deg, #ff416c, #ff4b2b);
            background-size: 600% 600%;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: waveFlash 4s ease-in-out infinite, glow 2s ease-in-out infinite;
        }
		@@keyframes waveFlash {
			0%

		{
			background-position: 0% 50%;
		}

		50% {
			background-position: 100% 50%;
		}

		100% {
			background-position: 0% 50%;
		}

		}
		@@keyframes glow {
            0%, 100%

        {
                text-shadow: 0 0 10px 0 0 20px #b0aac0;
        }

		}

        .variety-title {
            color: #e67e22; /* Beautiful orange (matches your navbar theme) */
            font-weight: bold;
            font-size: 2rem;
            font-family: 'Nunito', sans-serif; /* matches your font if you want */
        }

		.card {
			border-radius: 15px;
			box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
		}

			.card img {
				max-width: 100%;
				height: auto;
				border-radius: 10px;
			}

			.card p {
				font-size: 1.2rem;
			}
    </style>
</text>