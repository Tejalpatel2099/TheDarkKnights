@page
@model PrivacyModel
@{
    ViewData["Title"] = "Ramen Ratings - Privacy Page";
}
<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-header">
        <p>Ramen Ratings Privacy Policy</p>
    </div>
    <div class="card-body">
        <p>1. Your reviews and ratings are public to help others find the best ramen experiences.</p>
        <p>2. When submitting a new rating or review, please ensure all required fields are completed accurately.</p>
        <p>3. We do not share your personal information (email, username) with third parties without your consent.</p>
        <p>4. You are responsible for the content you submit — please respect community guidelines and avoid posting inappropriate material.</p>
    </div>
