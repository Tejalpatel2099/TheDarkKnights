@using RamenRatings.WebSite.Models
@using RamenRatings.WebSite.Services
@using Microsoft.AspNetCore.Components.Web
@inject JsonFileProductService ProductService

<!-- Responsive table for displaying products table -->
<div class="table-responsive shadow-lg overflow-hidden border border-light-subtle" style="border-radius: 2rem;">
    <table class="table table-hover table-borderless align-middle mb-0">
        <!-- Table headers -->
        <thead class="text-white" style="background: linear-gradient(135deg, #ff9800, #ff5722);">
            <tr class="text-center">
                <th scope="col">Brand</th>
                <th scope="col">Variety</th>
                <th scope="col">Country</th>
                <th scope="col">Style</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <!-- Table body -->
        <tbody>
            @foreach (var product in ProductService.GetProducts())
            {
                <tr class="text-center border-bottom">
                    <td class="fw-semibold text-capitalize">@product.Brand</td>
                    <td class="text-muted">@product.Variety</td>
                    <td>
                        <span class="badge bg-light text-dark px-3 py-2 rounded-pill">@product.Country</span>
                    </td>
                    <td>
                        <span class="text-capitalize">@product.Style</span>
                    </td>
                    <td>
                        <div class="d-flex justify-content-center gap-2 flex-wrap">
                            <a class="btn btn-outline-primary rounded-pill px-3 py-1 shadow-sm" href="/Product/Read/@product.Number">
                                📖
                            </a>
                            <a class="btn mx-2 btn-outline-warning rounded-pill px-3 py-1 shadow-sm" href="/Product/Update/@product.Number">
                                ✏️
                            </a>
                            <a class="btn btn-outline-danger rounded-pill px-3 py-1 shadow-sm" href="/Product/Delete/@product.Number">
                                🗑️
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



